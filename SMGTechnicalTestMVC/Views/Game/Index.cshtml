@model IEnumerable<SMGTechnicalTestMVC.Models.Game>

<link rel="stylesheet" href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />


@if (Model.Count() > 0)
{
    <h2 class="text-black-50 mt-2 mb-2">Game History</h2>
    <table class="table table-striped table-bordered table-hover" id="gamesTable">
        <thead>
            <tr>
                <th>
                    Game number
                </th>
                <th>
                    Player choice
                </th>
                <th>
                    Computer choice
                </th>
                <th>
                    Game result
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.PlayerChoice</td>
                    <td>@game.ComputerChoice</td>
                    <td>@game.GameResult</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No games created yet.</p>
}

@section scripts{
    <script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#gamesTable').DataTable();
        });
    </script>
}
